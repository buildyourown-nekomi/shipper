{
  "name": "drizzle-sqlite-minimal",
  "version": "1.0.0",
  "description": "Minimal Node.js TypeScript project with Drizzle ORM and SQLite",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "migrate": "tsx src/database/migrate.ts",
    "reset": "tsx src/database/migrate.ts reset",
    "postbuild": "sed -i '1s/^/#\\!\\/usr\\/bin\\/env node\\n/' dist/index.js"
  },
  "bin": {
    "shipper": "./dist/index.js"
  },
  "dependencies": {
    "better-sqlite3": "^11.10.0",
    "chalk": "^5.4.1",
    "dotenv": "^17.2.0",
    "drizzle-orm": "^0.32.0",
    "sha256": "^0.2.0",
    "yaml": "^2.8.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.10",
    "@types/node": "^20.14.0",
    "@types/sha256": "^0.2.2",
    "@types/yargs": "^17.0.33",
    "tsx": "^4.15.0",
    "typescript": "^5.5.0",
    "yargs": "^18.0.0"
  },
  "type": "module"
}
